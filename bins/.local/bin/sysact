#!/bin/sh

# A dmenu wrapper script for system functions.

# For non-systemd init systems.
case "$(readlink -f /sbin/init)" in
	*runit*) hib="doas -n zzz" ;;
	*openrc*) reb="doas -n openrc-shutdown -r now"; shut="doas openrc-shutdown -p now" ;;
esac

cmds="\
ğŸ”’ lock		slock
ğŸšª leave dwm	kill -TERM $(pgrep -u $USER "\bdwm$")
â™» renew dwm	kill -HUP $(pgrep -u $USER "\bdwm$")
ğŸ» hibernate	slock ${hib:-systemctl suspend-then-hibernate -i}
ğŸ”ƒ reboot	${reb:-doas -n reboot}
ğŸ–¥ï¸ shutdown	${shut:-doas -n shutdown -h now}"

choice="$(echo "$cmds" | cut -d'	' -f 1 | dmenu)" || exit 1

`echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-`
